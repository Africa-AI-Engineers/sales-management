<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                tools:context="com.example.anik.agent.ComplaintActivity">

    <Button
        android:id="@+id/btnAllComplaints"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="10dp"
        android:text="View submitted complaints"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/btnTextualComplaint"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btnAllComplaints"
        android:layout_marginBottom="10dp"
        android:text="Submit a textual complaint"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/btnPhotoComplaint"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btnTextualComplaint"
        android:text="Submit a photo complaint"
        android:textAllCaps="false"/>
</RelativeLayout>

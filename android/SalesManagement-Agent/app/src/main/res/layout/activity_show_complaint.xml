<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                tools:context="com.example.anik.agent.ShowComplaint">


    <TextView
        android:id="@+id/complaintTitleForShowComplaint"
        style="@style/TextAppearance.AppCompat.Large"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="5dp"
        android:text="Complaint title"/>

    <TextView
        android:id="@+id/complaintDescriptionForShowComplaint"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/complaintTitleForShowComplaint"
        android:layout_marginBottom="5dp"
        android:text="Complaint description"/>

    <TextView
        android:id="@+id/complaintSubmissionStatusForShowComplaint"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/complaintDescriptionForShowComplaint"
        android:layout_marginBottom="5dp"
        android:text="Submission status"/>

    <TextView
        android:id="@+id/complaintSolutionForShowComplaint"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/complaintSubmissionStatusForShowComplaint"
        android:layout_marginBottom="5dp"
        android:text="Solution"/>

    <TextView
        android:id="@+id/complaintSubmissionDateForShowComplaint"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/complaintSolutionForShowComplaint"
        android:layout_marginBottom="5dp"
        android:text="Submitted on"/>

</RelativeLayout>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:descendantFocusability="beforeDescendants"
                android:focusableInTouchMode="true"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                tools:context="com.example.anik.agent.QuickOrderActivity">


    <Button
        android:id="@+id/buttonForQuickOrderSubmission"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="Place quick order [0]"
        android:textAllCaps="false"/>

    <EditText
        android:id="@+id/productUniqueIdQuickOrder"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/buttonForQuickOrderSubmission"
        android:hint="Enter product unique id"/>

    <EditText
        android:id="@+id/productQuantityForQuickOrder"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/productUniqueIdQuickOrder"
        android:hint="Enter quantity"
        android:inputType="numberDecimal"/>

    <Button
        android:id="@+id/buttonAddProductForQuickOrder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/productQuantityForQuickOrder"
        android:gravity="center_vertical"
        android:text="Add this product"
        android:textAllCaps="false"/>

    <ListView
        android:id="@+id/listViewForQuickOrderOrderList"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/buttonAddProductForQuickOrder"/>
</RelativeLayout>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                tools:context="com.example.anik.shop.AccountDetailsActivity">

    <ImageView
        android:id="@+id/ivUserImage"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/no_preview"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/messageForJoiningDate"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/ivUserImage"
        android:gravity="left"
        android:text="Joined on: "/>

    <TextView
        android:id="@+id/showJoiningDate"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/messageForJoiningDate"
        android:gravity="right"
        android:text="Date joined"/>

    <TextView
        android:id="@+id/messageForUsername"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/messageForJoiningDate"
        android:gravity="left"
        android:text="Name: "/>

    <TextView
        android:id="@+id/showUserName"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/messageForUsername"
        android:gravity="right"
        android:text="User name registered"/>

    <TextView
        android:id="@+id/messageForMobileNumber"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/messageForUsername"
        android:gravity="left"
        android:text="Mobile No: "/>

    <TextView
        android:id="@+id/showMobileNumber"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/messageForMobileNumber"
        android:gravity="right"
        android:text="Mobile number registered with"/>

    <TextView
        android:id="@+id/messageForAddress"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/showMobileNumber"
        android:gravity="left"
        android:text="Address: "/>

    <TextView
        android:id="@+id/showAddress"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/messageForAddress"
        android:gravity="right"
        android:text="Address"/>


</RelativeLayout>

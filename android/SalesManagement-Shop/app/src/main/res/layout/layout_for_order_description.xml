<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

    <TextView
        android:id="@+id/productNameForOrderDescription"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="3dp"
        android:text="Product name"
        android:textAppearance="?android:attr/textAppearanceMedium"/>

    <TextView
        android:id="@+id/productPriceForOrderDescription"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/productNameForOrderDescription"
        android:layout_marginBottom="3dp"
        android:text="Price"/>

    <TextView
        android:id="@+id/productTotalTaxForOrderDescription"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/productNameForOrderDescription"
        android:layout_marginBottom="3dp"
        android:gravity="right"
        android:text="Total tax"/>

    <TextView
        android:id="@+id/productQuantityForOrderDescription"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/productPriceForOrderDescription"
        android:layout_marginBottom="3dp"
        android:gravity="left"
        android:text="Quantity"/>

    <TextView
        android:id="@+id/totalPriceForOrderDescription"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/productPriceForOrderDescription"
        android:layout_marginBottom="3dp"
        android:gravity="right"
        android:text="Total price"/>

</RelativeLayout>
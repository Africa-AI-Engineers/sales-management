<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                tools:context="com.example.anik.shop.ShowProduct">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <Button
                android:id="@+id/btnAskLatestPrice"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="3dp"
                android:text="Ask for latest price"
                android:textAllCaps="false"/>

            <Button
                android:id="@+id/btnAddToCart"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/btnAskLatestPrice"
                android:text="Add to cart"
                android:layout_marginBottom="3dp"
                android:textAllCaps="false" />

            <TextView
                android:id="@+id/productName"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/btnAddToCart"
                android:text="Product name"/>

            <ImageView
                android:id="@+id/productImage"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/productName"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:adjustViewBounds="true"
                android:src="@drawable/no_preview"/>

            <TextView
                android:id="@+id/productDescription"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/productImage"
                android:paddingBottom="3dp"
                android:text="Product description"/>

            <TextView
                android:id="@+id/productAttributes"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/productDescription"
                android:paddingBottom="3dp"
                android:text="Product attributes"/>

            <TextView
                android:id="@+id/productDeliverTime"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/productAttributes"
                android:paddingBottom="3dp"
                android:text="Delivery time"/>


            <TextView
                android:id="@+id/productPrice"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/productDeliverTime"
                android:paddingBottom="3dp"
                android:text="Product price"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/productBrand"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/productPrice"
                android:paddingBottom="3dp"
                android:text="Product brand"/>

            <TextView
                android:id="@+id/productClass"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/productBrand"
                android:paddingBottom="3dp"
                android:text="Product class"/>

            <TextView
                android:id="@+id/productGuarantee"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/productClass"
                android:paddingBottom="3dp"
                android:text="Product guarantee"/>

            <TextView
                android:id="@+id/productTaxes"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/productGuarantee"
                android:paddingBottom="3dp"
                android:text="Product taxes"/>

            <TextView
                android:id="@+id/productLinks"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/productTaxes"
                android:paddingBottom="3dp"
                android:text="Product links"/>

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>

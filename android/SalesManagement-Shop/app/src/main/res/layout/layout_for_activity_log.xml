<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <TextView
        android:id="@+id/textViewForActivityLogTitle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
        android:text="Activity log text message"
        android:textAppearance="?android:attr/textAppearanceMedium"/>

    <TextView
        android:id="@+id/textViewForActivityLogPostedOnMessage"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textViewForActivityLogTitle"
        android:gravity="left"
        android:text="Posted on:"/>

    <TextView
        android:id="@+id/textViewForActivityLogPostedOnDate"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textViewForActivityLogTitle"
        android:layout_marginBottom="5dp"
        android:gravity="right"
        android:text="Posted on date"/>

    <TextView
        android:id="@+id/textViewForActivityLogId"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textViewForActivityLogPostedOnMessage"
        android:gravity="left"
        android:text="Activity id"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/textViewForActivityLogReferenceId"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textViewForActivityLogId"
        android:text="Reference Id"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/textViewForActivityLogReferenceType"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textViewForActivityLogReferenceId"
        android:text="Reference type"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:visibility="gone"/>

</RelativeLayout>